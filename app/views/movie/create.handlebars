<div class="panel panel-default">
	<div class="panel-heading">
		<div class="panel-title"><i class="fa fa-fw fa-plus"></i>新增电影</div>
	</div>
	<div class="panel-body">
		<div class="row">
			<div class="col-lg-4">
				<a href="/movie/list" class="btn btn-success"><i class="fa fa-fw fa-reply"></i>返回电影列表</a>
			</div>			
		</div>
		<hr>
		<form class="form-horizontal" id="form" method="post" action="/movie/create">
			<div class="form-group">
				<label class="control-label col-lg-2">名称</label>
				<div class="col-lg-6">
					<input type="text" name="name" class="form-control" ></input>
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-lg-2">分类</label>
				<div class="col-lg-6">
					<div class="checkbox">
						{{#each movie_categories}}
							<label>
								<input type="checkbox" name="category" value="{{_id}}"></input>{{name}}
							</label>
						{{/each}}						
					</div>
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-lg-2">上映时间</label>
				<div class="col-lg-2">
					<input type="date" name="publish" class="form-control" ></input>
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-lg-2">是否被禁</label>
				<div class="col-lg-6">
					<div class="radio">
						<label>
							<input type="radio" name="allowInChina" value="1" checked></input>是
						</label>
						<label>
							<input type="radio" name="allowInChina" value="0"></input>否
						</label>
					</div>
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-lg-2">海报</label>
				<div class="col-lg-6">
					<input type="file" name="poster" class="form-control" ></input>
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-lg-2">备注</label>
				<div class="col-lg-6">
					<textarea class="form-control" rows="5" name="remarks" ></textarea>
				</div>
			</div>
			<div class="form-group">
				<div class="col-lg-offset-2 col-lg-4">
					<button type="submit" class="btn btn-primary"><i class="fa fa-fw fa-save"></i>保存</button>
				</div>
			</div>
		</form>	
	</div>
</div>
{{#section 'js'}}
	<script type="text/javascript" src="/libs/jquery-validation/dist/jquery.validate.min.js"></script>
	<script type="text/javascript" src="/js/validate/messages_cn.js"></script>
	<script type="text/javascript">
		$(function(){
			$("#form").validate({
				rules:{
					name:{
						required:true,
						maxlength:40
					},
					category:{
						required:true
					},
					poster:{
						//accept:'image/*'
					},
					remarks:{
						maxlength:1000
					}
				}
			});
		});
	</script>
{{/section}}